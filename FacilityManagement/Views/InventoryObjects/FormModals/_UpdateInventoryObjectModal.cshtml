@model FacilityManagement.Web.Models.ViewModels.DetailsViewModel

<div id="replaceWithAjax">
    <form asp-action="UpdateInventoryObjectAjaxFormAsync" asp-controller="InventoryObjects"
          data-ajax="true"
          data-ajax-method="POST"
          data-ajax-complete="onUpdateCompressorComplete"
          data-ajax-mode="replace" 
          data-ajax-update="#replaceWithAjax"
          data-ajax-loading="#modal-overlay-loading">

        <partial name="Modals/_ModalHeader" model='new ModalHeader() {
                 Heading = SharedLocalizer["Edit unit"].Value
        }' />

        <div class="modal-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InventoryObjectId" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manufacturer" class="control-label"></label>
                <input asp-for="Manufacturer" class="form-control" />
                <span asp-validation-for="Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkingHours" class="control-label"></label>
                <input asp-for="WorkingHours" class="form-control" />
                <span asp-validation-for="WorkingHours" class="text-danger"></span>
            </div>
        </div>

        <partial name="Modals/_ModalFooter" model='new ModalFooter() { }' />

    </form>
</div>

