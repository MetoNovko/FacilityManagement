@model FacilityManagement.Web.Models.ViewModels.DetailsViewModel

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<dl class="dl-horizontal" id="compressor-info-list">
    <dt>@Localizer["Name"]</dt>
    <dd>@Model.Name</dd>
    <dt>@Localizer["Manufacturer"]</dt>
    <dd>@Model.Manufacturer</dd>
    <dt>@Localizer["Model"]</dt>
    <dd>@Model.Model</dd>
    <dt>@Localizer["Description"]</dt>
    <dd>@Model.Description</dd>
    <dt>@Localizer["Working hours"]</dt>
    <dd>@Model.WorkingHours</dd>
</dl>