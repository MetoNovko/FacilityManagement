@model ModalFooter
@{
    var buttonClass = (Model.SubmitButtonText == "Избриши" || Model.SubmitButtonText == "Delete") ? "btn-danger" : "btn-info";
}

<div class="modal-footer">
    <button data-dismiss="modal" id="@Model.CancelButtonID" class="btn btn-default" type="button">@SharedLocalizer[Model.CancelButtonText].Value</button>
    @if (!Model.OnlyCancelButton)
    {
        <button class="btn @buttonClass" id="@Model.SubmitButtonID" type="submit">
            @SharedLocalizer[Model.SubmitButtonText].Value
        </button>
    }
</div>