@model FacilityManagement.Web.Models.ViewModels.CompressorDetailsViewModel

@{
    ViewData["Title"] = "Детали";
    ViewData["Description"] = "Кратко инфо";
}

<div class="row">
    <div class="col-md-6">
        <div class="box">
            <div class="box-header with-border">
                <span class="glyphicon glyphicon-align-justify"></span>
                <h3 class="box-title">@Model.Name</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <dl class="dl-horizontal">
                    <dt>Производител</dt>
                    <dd>@Model.Manufacturer</dd>
                    <dt>Модел</dt>
                    <dd>@Model.Model</dd>
                    <dt>Опис</dt>
                    <dd>@Model.Description</dd>
                </dl>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>

    <div class="col-md-6">
        <div class="box">
            <div class="box-header with-border">
                <span class="glyphicon glyphicon-edit"></span>
                <h3 class="box-title">Поставки</h3>
            </div>
            <div class="box-body">
                <button type="button" class="btn btn-default btn-block btn-sm">Измени податоци</button>
                <button type="button" class="btn btn-default btn-block btn-sm">Избриши</button>
                <button type="button" class="btn btn-default btn-block btn-sm">Додади нов систем</button>
            </div>
        </div>
        <!-- /.box -->
    </div>
    <!-- ./col -->
</div>

<div class="box box-solid box-container">
    <div class="box-header with-border">
        <span class="glyphicon glyphicon-edit"></span>
        <h3 class="box-title">Детален преглед</h3>
    </div>
    <div class="box-body">
        <ul class="nav nav-pills nav-justified">
            @foreach (var subtype in Model.CompressorSubTypes)
            {
                <li class="active"><a href="#" id="@subtype.CompressorSubTypeId">@subtype.Name</a></li>
            }
        </ul>

        @foreach (var system in Model.CompressorSubTypes.ElementAt(0).CompressorSystems)
        {
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">@system.Name</h3>

                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>

                </div>

                <div class="box-body">
                    ДЕЛОВИ
                </div>

                <div class="overlay">
                    <i class="fa fa-refresh fa-spin"></i>
                </div>
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>