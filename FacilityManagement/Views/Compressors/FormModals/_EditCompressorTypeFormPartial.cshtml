@model FacilityManagement.Web.Models.ViewModels.EditCompressorTypeDetailsViewModel

<div id="replaceWithAjax">
    <form asp-action="EditCompressorTypeAjaxFormAsync" asp-controller="Compressors"
          data-ajax="true"
          data-ajax-method="POST"
          data-ajax-complete="onEditCompressorTypeComplete"
          data-ajax-mode="replace"
          data-ajax-update="#replaceWithAjax"
          data-ajax-loading="#modal-overlay-loading">

        <partial name="Modals/_ModalHeader" model='new ModalHeader() {
                 Heading = "Измени тип"
        }' />

        <div class="modal-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CompressorId" />

            <div class="form-group">
                <label asp-for="CompressorSubTypeId" class="control-label"></label>
                <select asp-for="CompressorSubTypeId" class="form-control"
                        asp-items='new SelectList(Model.AllCompressorTypes, "CompressorSubTypeId", "Name")'></select>
                <span asp-validation-for="CompressorSubTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <partial name="Modals/_ModalFooter" model='new ModalFooter() { }' />

    </form>
</div>