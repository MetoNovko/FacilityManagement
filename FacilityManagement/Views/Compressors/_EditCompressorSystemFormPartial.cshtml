@model FacilityManagement.Web.Models.ViewModels.EditCompressorSystemDetailsViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Измени постоечки систем</h4>
</div>
<div class="modal-body">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="CompressorSubTypeId" class="selectedSubTypeIdValue" />

        <label asp-for="CompressorSystemId" class="control-label"></label>
        <select asp-for="CompressorSystemId" class="form-control"
                asp-items='new SelectList(Model.AllCompressorSystems, "CompressorSystemId", "Name")'></select>
        <span asp-validation-for="CompressorSystemId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Откажи</button>
    <button type="submit" class="btn btn-info">Измени</button>
</div>
