@page
@model LoginModel


@{
    ViewData["Title"] = "Најава";
    Layout = "/Views/Shared/_BlankLayout.cshtml";
}

<div class="login-wrap">
    <div class="login-html">
        <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Најава</label>
        <div class="login-form">
            <div class="sign-in-htm">
                <div asp-validation-summary="All" class="text-danger"></div>
                <form method="post">
                    <div class="group">
                        <label asp-for="Input.Email" class="label"></label>
                        <input asp-for="Input.Email" class="input" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="group">
                        <label asp-for="Input.Password" class="label"></label>
                        <input asp-for="Input.Password" class="input" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="group">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" id="check" checked />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div class="group">
                        <input type="submit" class="button" value="Најави се">
                    </div>
                    <div class="hr"></div>
                    <div class="foot-lnk">
                        <a asp-page="Register">Регистрирај се</a>
                    </div>
                    <div class="foot-lnk">
                        <a asp-page="#ForgotPassword">Заборавена лозинка (Наскоро)</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}