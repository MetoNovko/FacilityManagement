@model LoginViewModel;

@{
    ViewData["Title"] = "Најава";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="login-wrap">
    <div class="login-html">
        <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Најава</label>
        <div class="login-form">
            <div class="sign-in-htm">
                <partial name="_ValidationSummary" />
                <form asp-route="Login" method="post">
                    <input type="hidden" asp-for="ReturnUrl" />
                    <div class="group">
                        <label asp-for="Username" class="label"></label>
                        <input asp-for="Username" class="input" autofocus />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="group">
                        <label asp-for="Password" class="label"></label>
                        <input asp-for="Password" class="input" type="password" autocomplete="off" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="group">
                        <label asp-for="RememberLogin">
                            <input asp-for="RememberLogin" id="check" />
                            @Html.DisplayNameFor(m => m.RememberLogin)
                        </label>
                    </div>
                    <div class="group">
                        <button class="button" name="button" value="login">Login</button>
                    </div>
                    <div class="hr"></div>
                    <div class="foot-lnk">
                        <a asp-controller="Account" asp-action="Register">Регистрирај се</a>
                    </div>
                    <div class="foot-lnk">
                        <!--<a asp-page="#ForgotPassword">Заборавена лозинка (Наскоро)</a>-->
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}